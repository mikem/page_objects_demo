<div id='sign-in-dialog-container'>
  <div id='sign-in-dialog'>
    <label for='login'>
      Login
      <input type='text' name='login' />
    </label>
    <label for='password'>
      Password
      <input type='password' name='password' />
    </label>
    <button id='submit-login'>Sign in</button>
    <br />
    <br />
    <a href='#' id='dismiss-sign-in-dialog'>cancel</a>
  </div>
</div>

<h1><%= @post.title %></h1>
<%= link_to 'Back to all posts', posts_path %>

<ul id="comment-list">
  <% @post.comments.each do |comment| %>
    <li><%= comment.text %></li>
  <% end %>
</ul>

<textarea id="new-comment" placeholder="Comment text">
</textarea>
<button id="submit-comment" data-url="<%= post_comments_path(@post) %>">Submit comment</button>
